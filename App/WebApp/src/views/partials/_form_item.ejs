<% 
    const formName = (typeof name !== 'undefined' && name !== null && name !== '') ? name : id;
%>

<input type="<% type %>" id="<%= id %>" name="<%= formName %>" value="<%= value %>"
    class="mt-1 block w-full px-4 py-2 border <%= validationErrorField ? 'border-red-500' : 'border-gray-300' %> rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
    placeholder="<%= placeholder %>">