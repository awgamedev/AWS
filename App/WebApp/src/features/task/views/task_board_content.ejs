<%
// Helper functions for the task board content
const getPriorityIcon = (priority) => {
    switch (priority) {
      case "high": return '<svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"></path></svg>';
      case "medium": return '<svg class="w-4 h-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-7a1 1 0 011 1v2a1 1 0 11-2 0v-2a1 1 0 011-1zm0-6a1 1 0 011 1v2a1 1 0 11-2 0V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>';
      case "low": return '<svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"></path></svg>';
      default: return '<svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20"><circle cx="10" cy="10" r="8"></circle></svg>';
    }
};

const getStatusLabel = (status) => {
    switch (status) {
      case "pending": return __("STATUS_PENDING");
      case "in-progress": return __("STATUS_IN_PROGRESS");
      case "completed": return __("STATUS_COMPLETED");
      default: return status;
    }
};
%>

<!-- Desktop/Tablet View: Table Layout -->
<div class="hidden md:block overflow-x-auto bg-white rounded-xl shadow-lg">
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
            <tr class="bg-gray-100">
                <th class="p-3 border border-gray-200 text-left text-sm font-medium text-gray-600 uppercase tracking-wider sticky left-0 bg-gray-100 shadow-sm w-40"><%= __("EMPLOYEE_HEADER") %></th>
                <% daysOfWeek.forEach(day => { %>
                    <th class="p-3 border border-gray-200 text-left text-sm font-medium text-gray-600 uppercase tracking-wider"><%= day %></th>
                <% }) %>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="p-3 border border-gray-200 font-semibold sticky left-0 bg-white shadow-sm w-40"><%= user.username %></td>
                        <% daysOfWeek.forEach(dayName => { 
                            const userId = user._id.toString();
                            const dayTasks = tasksByDayAndUser[userId] ? tasksByDayAndUser[userId][dayName] || [] : [];
                        %>
                            <td class="p-2 border border-gray-200 align-top h-2">
                                <% dayTasks.forEach(task => { const priorityIcon = getPriorityIcon(task.taskPriority); %>
                                    <div 
                                        class="task-item px-2 py-1 rounded-lg text-xs font-medium border border-gray-300 bg-white hover:bg-gray-50 my-1 cursor-pointer transition duration-100" 
                                        data-task-id="<%= task._id %>"
                                        data-user-id="<%= task.userId %>"
                                        data-task-name="<%= task.taskName %>"
                                        data-task-desc="<%= task.taskDescription || '' %>"
                                        data-task-status="<%= task.taskStatus %>"
                                        data-task-priority="<%= task.taskPriority %>"
                                        data-start-date="<%= task.startDate.toISOString().substring(0, 10) %>"
                                        data-end-date="<%= task.endDate ? task.endDate.toISOString().substring(0, 10) : '' %>"
                                        title="<%= __("STATUS_TITLE") %>: <%= task.taskStatus %> - <%= __("CLICK_TO_EDIT") %>"
                                    >
                                        <div class="flex items-start justify-between gap-1">
                                            <div class="flex-1">
                                                <div><%= task.taskName %> (<%= task.assignedUsername %>)</div>
                                                <div class="text-[10px] opacity-75 mt-0.5"><%= __("STATUS_TITLE") %>: <%= getStatusLabel(task.taskStatus) %></div>
                                            </div>
                                            <div class="flex-shrink-0 mt-0.5"><%- priorityIcon %></div>
                                        </div>
                                    </div>
                                <% }) %>
                            </td>
                        <% }) %>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="8" class="text-center py-10 text-gray-500 italic"><%= __("NO_DATA_FOUND") %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Mobile View: Card-based Layout -->
<div class="md:hidden space-y-4">
    <% if (users && users.length > 0) { %>
        <% users.forEach(user => { %>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <!-- User Header -->
                <div class="bg-indigo-600 text-white px-4 py-3">
                    <h3 class="font-bold text-lg"><%= user.username %></h3>
                </div>
                
                <!-- Days and Tasks -->
                <div class="divide-y divide-gray-200">
                    <% daysOfWeek.forEach(dayName => { 
                        const userId = user._id.toString();
                        const dayTasks = tasksByDayAndUser[userId] ? tasksByDayAndUser[userId][dayName] || [] : [];
                    %>
                        <div class="p-3">
                            <div class="flex items-center justify-between mb-2">
                                <h4 class="font-semibold text-gray-700 text-sm"><%= dayName %></h4>
                                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"><%= dayTasks.length %> <%= dayTasks.length === 1 ? __("TASK") : __("TASKS") %></span>
                            </div>
                            
                            <% if (dayTasks.length > 0) { %>
                                <div class="space-y-2">
                                    <% dayTasks.forEach(task => { const priorityIcon = getPriorityIcon(task.taskPriority); %>
                                        <div 
                                            class="task-item px-3 py-2 rounded-lg text-sm font-medium border border-gray-300 bg-white hover:bg-gray-50 cursor-pointer transition duration-100" 
                                            data-task-id="<%= task._id %>"
                                            data-user-id="<%= task.userId %>"
                                            data-task-name="<%= task.taskName %>"
                                            data-task-desc="<%= task.taskDescription || '' %>"
                                            data-task-status="<%= task.taskStatus %>"
                                            data-task-priority="<%= task.taskPriority %>"
                                            data-start-date="<%= task.startDate.toISOString().substring(0, 10) %>"
                                            data-end-date="<%= task.endDate ? task.endDate.toISOString().substring(0, 10) : '' %>"
                                        >
                                            <div class="flex items-start justify-between gap-2">
                                                <div class="flex-1">
                                                    <div><%= task.taskName %></div>
                                                    <div class="text-xs mt-1 opacity-75">
                                                        <%= task.assignedUsername %>
                                                    </div>
                                                    <div class="text-xs mt-1 opacity-75">
                                                        <%= __("STATUS_TITLE") %>: <%= getStatusLabel(task.taskStatus) %>
                                                    </div>
                                                </div>
                                                <div class="flex-shrink-0 mt-0.5"><%- priorityIcon %></div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <p class="text-xs text-gray-400 italic"><%= __("NO_TASKS") %></p>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
            <p class="text-gray-500 italic"><%= __("NO_DATA_FOUND") %></p>
        </div>
    <% } %>
</div>
