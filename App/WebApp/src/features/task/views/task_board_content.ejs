<%
// Helper functions for the task board content
const getPriorityIcon = (priority) => {
    switch (priority) {
      case "high": return '<img class="w-4 h-4" src="img/priority/high.png" alt="High Priority" />';
      case "medium": return '<img class="w-4 h-4" src="img/priority/medium.png" alt="Medium Priority"/>';
      case "low": return '<img class="w-4 h-4" src="img/priority/low.png" alt="Low Priority"/>';
    }
};

const getStatusLabel = (status) => {
    switch (status) {
      case "pending": return __("STATUS_PENDING");
      case "in-progress": return __("STATUS_IN_PROGRESS");
      case "completed": return __("STATUS_COMPLETED");
      default: return status;
    }
};

const getStatusBadge = (status) => {
    switch (status) {
      case "pending": 
        return '<span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-gray-100 text-gray-700 border border-gray-300"><i class="fas fa-clock mr-1"></i>' + __("STATUS_PENDING") + '</span>';
      case "in-progress": 
        return '<span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-blue-100 text-blue-700 border border-blue-300"><i class="fas fa-spinner mr-1"></i>' + __("STATUS_IN_PROGRESS") + '</span>';
      case "completed": 
        return '<span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-green-100 text-green-700 border border-green-300"><i class="fas fa-check-circle mr-1"></i>' + __("STATUS_COMPLETED") + '</span>';
      default: 
        return '<span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-gray-100 text-gray-700 border border-gray-300">' + status + '</span>';
    }
};

// Helper to check if task extends beyond week boundaries
const getTaskArrows = (task, dayName, daysOfWeek) => {
    const dayIndex = daysOfWeek.indexOf(dayName);
    const taskStart = new Date(task.startDate);
    const taskEnd = task.endDate ? new Date(task.endDate) : null;
    
    // Get week boundaries from template data
    const firstDayOfWeek = typeof startOfWeek === 'string' ? new Date(startOfWeek) : new Date(startOfWeek.getTime());
    firstDayOfWeek.setHours(0, 0, 0, 0);
    const lastDayOfWeek = typeof endOfWeek === 'string' ? new Date(endOfWeek) : new Date(endOfWeek.getTime());
    lastDayOfWeek.setHours(23, 59, 59, 999);
    
    const arrows = { left: false, right: false };
    
    // Check if task starts before the week and we're on the first day
    if (dayIndex === 0 && taskStart < firstDayOfWeek) {
        arrows.left = true;
    }
    
    // Check if task ends after the week and we're on the last day
    if (dayIndex === daysOfWeek.length - 1 && taskEnd && taskEnd > lastDayOfWeek) {
        arrows.right = true;
    }
    
    return arrows;
};

// Helper to check if a day is today
const isToday = (dayName, daysOfWeek) => {
    const today = new Date();
    const firstDayOfWeek = typeof startOfWeek === 'string' ? new Date(startOfWeek) : new Date(startOfWeek.getTime());
    const lastDayOfWeek = typeof endOfWeek === 'string' ? new Date(endOfWeek) : new Date(endOfWeek.getTime());
    
    // Check if today is within the current week
    if (today < firstDayOfWeek || today > lastDayOfWeek) {
        return false;
    }
    
    const dayIndex = daysOfWeek.indexOf(dayName);
    const dayDate = new Date(firstDayOfWeek);
    dayDate.setDate(dayDate.getDate() + dayIndex);
    
    return today.getFullYear() === dayDate.getFullYear() &&
           today.getMonth() === dayDate.getMonth() &&
           today.getDate() === dayDate.getDate();
};
%>

<!-- Unassigned Tasks Strip -->
<% if (unassignedTasks && unassignedTasks.length > 0) { %>
<div class="mb-4 bg-gradient-to-r from-amber-50 to-orange-50 border-2 border-amber-200 rounded-xl shadow-md overflow-hidden">
    <div class="px-4 py-2 bg-amber-100 border-b border-amber-200">
        <div class="flex items-center justify-between">
            <h3 class="text-sm font-semibold text-amber-900 flex items-center">
                <i class="fas fa-exclamation-triangle mr-2 text-amber-600"></i>
                <%= __("UNASSIGNED_TASKS") || "Unassigned Tasks" %> (<%= unassignedTasks.length %>)
            </h3>
            <span class="text-xs text-amber-700"><%= __("CLICK_TO_ASSIGN") || "Click to view and assign" %></span>
        </div>
    </div>
    <div class="p-3">
        <div class="flex flex-wrap gap-2">
            <% unassignedTasks.forEach(task => { 
                const priorityIcon = getPriorityIcon(task.taskPriority);
                const startDateStr = task.startDate.toLocaleDateString('de-DE', { month: 'short', day: 'numeric' });
                const endDateStr = task.endDate ? task.endDate.toLocaleDateString('de-DE', { month: 'short', day: 'numeric' }) : '';
            %>
                <div 
                    class="unassigned-task-chip px-3 py-2 bg-white border-2 border-amber-300 rounded-lg cursor-pointer hover:bg-amber-50 hover:border-amber-400 hover:shadow-md transition-all duration-200 flex items-center gap-2 text-sm"
                    data-task-id="<%= task._id %>"
                    data-task-name="<%= task.taskName %>"
                    data-task-desc="<%= task.taskDescription || '' %>"
                    data-task-status="<%= task.taskStatus %>"
                    data-task-priority="<%= task.taskPriority %>"
                    data-start-date="<%= task.startDate.toISOString().substring(0, 10) %>"
                    data-end-date="<%= task.endDate ? task.endDate.toISOString().substring(0, 10) : '' %>"
                    title="<%= __("CLICK_TO_VIEW_AND_ASSIGN") || 'Click to view and assign to yourself' %>"
                >
                    <div class="flex-shrink-0"><%- priorityIcon %></div>
                    <div class="flex-1 min-w-0">
                        <div class="font-medium text-gray-900 truncate"><%= task.taskName %></div>
                        <div class="text-xs text-gray-600">
                            <%= startDateStr %><% if (endDateStr) { %> - <%= endDateStr %><% } %>
                        </div>
                    </div>
                    <div class="flex-shrink-0">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-amber-200 text-amber-800">
                            <i class="fas fa-user-plus mr-1"></i>
                            <%= __("ASSIGN") || 'Assign' %>
                        </span>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<% } %>

<!-- Desktop/Tablet View: Table Layout -->
<div class="hidden md:block overflow-x-auto bg-white rounded-xl shadow-lg" style="max-height:calc(100vh - 270px);">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="sticky top-0 z-30">
            <tr class="bg-gray-100">
                <th class="px-4 py-3 border border-gray-200 text-left text-sm font-medium text-gray-600 uppercase tracking-wider sticky left-0 bg-gray-100 shadow-sm" style="min-width: 180px; max-width: 200px; z-index: 40;"><%= __("EMPLOYEE_HEADER") %></th>
                <% daysOfWeek.forEach(day => { 
                    const todayColumn = isToday(day, daysOfWeek);
                %>
                    <th class="px-4 py-3 border border-gray-200 text-left text-sm font-medium uppercase tracking-wider <%= todayColumn ? 'bg-indigo-100 text-indigo-800' : 'text-gray-600' %>" style="min-width: 200px;"><%= day %></th>
                <% }) %>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            <% if (users && users.length > 0) { %>
                <% users.forEach(user => { 
                    const userInitials = user.username.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
                %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 border border-gray-200 sticky left-0 bg-white shadow-sm" style="min-width: 180px; max-width: 200px; z-index: 10;">
                            <div class="flex items-center space-x-2">
                                <div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold text-xs shadow-sm overflow-hidden flex-shrink-0">
                                    <% if (profileMap && profileMap[user._id.toString()] && profileMap[user._id.toString()].profilePictureBase64) { %>
                                        <img src="<%= profileMap[user._id.toString()].profilePictureBase64 %>" alt="Avatar" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <%= userInitials %>
                                    <% } %>
                                </div>
                                <span class="font-semibold text-sm text-gray-800 truncate"><%= user.username %></span>
                            </div>
                        </td>
                        <% daysOfWeek.forEach(dayName => { 
                            const userId = user._id.toString();
                            const dayTasks = tasksByDayAndUser[userId] ? tasksByDayAndUser[userId][dayName] || [] : [];
                            const todayColumn = isToday(dayName, daysOfWeek);
                        %>
                            <td class="px-3 py-2 border border-gray-200 align-top task-cell-container <%= todayColumn ? 'bg-indigo-50' : '' %> <%= dayTasks.length === 0 ? 'empty-task-cell cursor-pointer hover:bg-indigo-50 transition' : '' %>" 
                                style="min-width: 200px; max-width: 220px; overflow-x: auto;"
                                data-user-id="<%= userId %>"
                                data-day-name="<%= dayName %>">
                                <div class="space-y-2 max-h-48 overflow-y-auto">
                                    <% if (dayTasks.length > 0) { %>
                                        <!-- Add Task Button (visible when tasks exist) -->
                                        <button 
                                            class="add-task-btn w-full flex items-center justify-center gap-1 px-2 py-1.5 mb-2 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition border border-indigo-200"
                                            data-user-id="<%= userId %>"
                                            data-day-name="<%= dayName %>"
                                            title="<%= __("ADD_TASK") || 'Add Task' %>">
                                            <i class="fas fa-plus text-xs"></i>
                                            <span><%= __("ADD_TASK") || 'Add Task' %></span>
                                        </button>
                                    <% } %>
                                    
                                    <% dayTasks.forEach(task => { 
                                        const priorityIcon = getPriorityIcon(task.taskPriority);
                                        const arrows = getTaskArrows(task, dayName, daysOfWeek);
                                    %>
                                        <div 
                                            class="task-item px-3 py-2 rounded-lg text-xs font-medium border border-gray-300 bg-white hover:bg-gray-50 cursor-pointer transition duration-100 shadow-sm relative" 
                                            data-task-id="<%= task._id %>"
                                            data-user-id="<%= task.userId %>"
                                            data-task-name="<%= task.taskName %>"
                                            data-task-desc="<%= task.taskDescription || '' %>"
                                            data-task-status="<%= task.taskStatus %>"
                                            data-task-priority="<%= task.taskPriority %>"
                                            data-start-date="<%= task.startDate.toISOString().substring(0, 10) %>"
                                            data-end-date="<%= task.endDate ? task.endDate.toISOString().substring(0, 10) : '' %>"
                                            title="<%= __("STATUS_TITLE") %>: <%= task.taskStatus %> - <%= __("CLICK_TO_EDIT") %>"
                                        >
                                            <% if (arrows.left) { %>
                                                <div class="absolute -left-2 top-1/2 -translate-y-1/2 bg-indigo-500 text-white rounded-full w-5 h-5 flex items-center justify-center shadow-md" title="Continues from previous week">
                                                    <i class="fas fa-chevron-left text-[10px]"></i>
                                                </div>
                                            <% } %>
                                            <% if (arrows.right) { %>
                                                <div class="absolute -right-2 top-1/2 -translate-y-1/2 bg-indigo-500 text-white rounded-full w-5 h-5 flex items-center justify-center shadow-md" title="Continues to next week">
                                                    <i class="fas fa-chevron-right text-[10px]"></i>
                                                </div>
                                            <% } %>
                                            <div class="flex items-start justify-between gap-2">
                                                <div class="flex-1 min-w-0">
                                                    <div class="font-medium text-gray-900"><%= task.taskName %></div>
                                                    <div class="text-[10px] text-gray-600 mt-1">(<%= task.assignedUsername %>)</div>
                                                    <div class="mt-1"><%- getStatusBadge(task.taskStatus) %></div>
                                                </div>
                                                <div class="flex-shrink-0 mt-0.5"><%- priorityIcon %></div>
                                            </div>
                                        </div>
                                    <% }); %>
                                    
                                    <% if (dayTasks.length === 0) { %>
                                        <!-- Empty State (clickable) -->
                                        <div class="text-center py-4 text-gray-400 text-xs pointer-events-none">
                                            <i class="fas fa-plus-circle text-lg mb-1"></i>
                                            <div><%= __("CLICK_TO_ADD_TASK") || 'Click to add task' %></div>
                                        </div>
                                    <% } %>
                                </div>
                            </td>
                        <% }) %>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="8" class="text-center py-10 text-gray-500 italic"><%= __("NO_DATA_FOUND") %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

