<%
// Helper functions for the task board content
const getPriorityIcon = (priority) => {
    switch (priority) {
      case "high": return '<img class="w-4 h-4" src="/img/priority/high.png" alt="High Priority" />';
      case "medium": return '<img class="w-4 h-4" src="/img/priority/medium.png" alt="Medium Priority"/>';
      case "low": return '<img class="w-4 h-4" src="/img/priority/low.png" alt="Low Priority"/>';
    //   default: return '<svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20"><circle cx="10" cy="10" r="8"></circle></svg>';
    }
};

const getStatusLabel = (status) => {
    switch (status) {
      case "pending": return __("STATUS_PENDING");
      case "in-progress": return __("STATUS_IN_PROGRESS");
      case "completed": return __("STATUS_COMPLETED");
      default: return status;
    }
};
%>

<!-- Desktop/Tablet View: Table Layout -->
<div class="hidden md:block overflow-x-auto bg-white rounded-xl shadow-lg">
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-4 py-3 border border-gray-200 text-left text-sm font-medium text-gray-600 uppercase tracking-wider sticky left-0 bg-gray-100 shadow-sm" style="min-width: 180px; max-width: 200px;"><%= __("EMPLOYEE_HEADER") %></th>
                <% daysOfWeek.forEach(day => { %>
                    <th class="px-4 py-3 border border-gray-200 text-left text-sm font-medium text-gray-600 uppercase tracking-wider" style="min-width: 200px;"><%= day %></th>
                <% }) %>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            <% if (users && users.length > 0) { %>
                <% users.forEach(user => { 
                    const userInitials = user.username.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
                %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 border border-gray-200 sticky left-0 bg-white shadow-sm" style="min-width: 180px; max-width: 200px;">
                            <div class="flex items-center space-x-2">
                                <div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold text-xs shadow-sm overflow-hidden flex-shrink-0">
                                    <% if (profileMap && profileMap[user._id.toString()] && profileMap[user._id.toString()].profilePictureBase64) { %>
                                        <img src="<%= profileMap[user._id.toString()].profilePictureBase64 %>" alt="Avatar" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <%= userInitials %>
                                    <% } %>
                                </div>
                                <span class="font-semibold text-sm text-gray-800 truncate"><%= user.username %></span>
                            </div>
                        </td>
                        <% daysOfWeek.forEach(dayName => { 
                            const userId = user._id.toString();
                            const dayTasks = tasksByDayAndUser[userId] ? tasksByDayAndUser[userId][dayName] || [] : [];
                        %>
                            <td class="px-3 py-2 border border-gray-200 align-top task-cell-container <%= dayTasks.length === 0 ? 'empty-task-cell cursor-pointer hover:bg-indigo-50 transition' : '' %>" 
                                style="min-width: 200px;"
                                data-user-id="<%= userId %>"
                                data-day-name="<%= dayName %>">
                                <div class="space-y-2">
                                    <% if (dayTasks.length > 0) { %>
                                        <!-- Add Task Button (visible when tasks exist) -->
                                        <button 
                                            class="add-task-btn w-full flex items-center justify-center gap-1 px-2 py-1.5 mb-2 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition border border-indigo-200"
                                            data-user-id="<%= userId %>"
                                            data-day-name="<%= dayName %>"
                                            title="<%= __("ADD_TASK") || 'Add Task' %>">
                                            <i class="fas fa-plus text-xs"></i>
                                            <span><%= __("ADD_TASK") || 'Add Task' %></span>
                                        </button>
                                    <% } %>
                                    
                                    <% dayTasks.forEach(task => { 
                                        const priorityIcon = getPriorityIcon(task.taskPriority); 
                                    %>
                                        <div 
                                            class="task-item px-3 py-2 rounded-lg text-xs font-medium border border-gray-300 bg-white hover:bg-gray-50 cursor-pointer transition duration-100 shadow-sm" 
                                            data-task-id="<%= task._id %>"
                                            data-user-id="<%= task.userId %>"
                                            data-task-name="<%= task.taskName %>"
                                            data-task-desc="<%= task.taskDescription || '' %>"
                                            data-task-status="<%= task.taskStatus %>"
                                            data-task-priority="<%= task.taskPriority %>"
                                            data-start-date="<%= task.startDate.toISOString().substring(0, 10) %>"
                                            data-end-date="<%= task.endDate ? task.endDate.toISOString().substring(0, 10) : '' %>"
                                            title="<%= __("STATUS_TITLE") %>: <%= task.taskStatus %> - <%= __("CLICK_TO_EDIT") %>"
                                        >
                                            <div class="flex items-start justify-between gap-2">
                                                <div class="flex-1 min-w-0">
                                                    <div class="font-medium text-gray-900"><%= task.taskName %></div>
                                                    <div class="text-[10px] text-gray-600 mt-1">(<%= task.assignedUsername %>)</div>
                                                    <div class="text-[10px] text-gray-500 mt-1"><%= __("STATUS_TITLE") %>: <%= getStatusLabel(task.taskStatus) %></div>
                                                </div>
                                                <div class="flex-shrink-0 mt-0.5"><%- priorityIcon %></div>
                                            </div>
                                        </div>
                                    <% }); %>
                                    
                                    <% if (dayTasks.length === 0) { %>
                                        <!-- Empty State (clickable) -->
                                        <div class="text-center py-4 text-gray-400 text-xs pointer-events-none">
                                            <i class="fas fa-plus-circle text-lg mb-1"></i>
                                            <div><%= __("CLICK_TO_ADD_TASK") || 'Click to add task' %></div>
                                        </div>
                                    <% } %>
                                </div>
                            </td>
                        <% }) %>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="8" class="text-center py-10 text-gray-500 italic"><%= __("NO_DATA_FOUND") %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Mobile View: Card-based Layout -->
<div class="md:hidden space-y-4">
    <% if (users && users.length > 0) { %>
        <% users.forEach(user => { %>
            <%
                const userInitials = user.username.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
            %>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <!-- User Header -->
                <div class="bg-indigo-600 text-white px-4 py-3">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center text-white font-bold text-sm shadow-sm overflow-hidden flex-shrink-0">
                            <% if (profileMap && profileMap[user._id.toString()] && profileMap[user._id.toString()].profilePictureBase64) { %>
                                <img src="<%= profileMap[user._id.toString()].profilePictureBase64 %>" alt="Avatar" class="w-full h-full object-cover">
                            <% } else { %>
                                <%= userInitials %>
                            <% } %>
                        </div>
                        <h3 class="font-bold text-lg"><%= user.username %></h3>
                    </div>
                </div>
                
                <!-- Days and Tasks -->
                <div class="divide-y divide-gray-200">
                    <% daysOfWeek.forEach(dayName => { 
                        const userId = user._id.toString();
                        const dayTasks = tasksByDayAndUser[userId] ? tasksByDayAndUser[userId][dayName] || [] : [];
                    %>
                        <div class="p-3 task-cell-mobile <%= dayTasks.length === 0 ? 'empty-task-cell cursor-pointer hover:bg-indigo-50 transition' : '' %>"
                             data-user-id="<%= userId %>"
                             data-day-name="<%= dayName %>">
                            <div class="flex items-center justify-between mb-2">
                                <h4 class="font-semibold text-gray-700 text-sm"><%= dayName %></h4>
                                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"><%= dayTasks.length %> <%= dayTasks.length === 1 ? __("TASK") : __("TASKS") %></span>
                            </div>
                            
                            <% if (dayTasks.length > 0) { %>
                                <!-- Add Task Button (mobile) -->
                                <button 
                                    class="add-task-btn w-full flex items-center justify-center gap-1 px-2 py-1.5 mb-2 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition border border-indigo-200"
                                    data-user-id="<%= userId %>"
                                    data-day-name="<%= dayName %>"
                                    title="<%= __("ADD_TASK") || 'Add Task' %>">
                                    <i class="fas fa-plus text-xs"></i>
                                    <span><%= __("ADD_TASK") || 'Add Task' %></span>
                                </button>
                                
                                <div class="space-y-2">
                                    <% dayTasks.forEach(task => { 
                                        const priorityIcon = getPriorityIcon(task.taskPriority); 
                                    %>
                                        <div 
                                            class="task-item px-3 py-2 rounded-lg text-sm font-medium border border-gray-300 bg-white hover:bg-gray-50 cursor-pointer transition duration-100" 
                                            data-task-id="<%= task._id %>"
                                            data-user-id="<%= task.userId %>"
                                            data-task-name="<%= task.taskName %>"
                                            data-task-desc="<%= task.taskDescription || '' %>"
                                            data-task-status="<%= task.taskStatus %>"
                                            data-task-priority="<%= task.taskPriority %>"
                                            data-start-date="<%= task.startDate.toISOString().substring(0, 10) %>"
                                            data-end-date="<%= task.endDate ? task.endDate.toISOString().substring(0, 10) : '' %>"
                                        >
                                            <div class="flex items-start justify-between gap-2">
                                                <div class="flex-1">
                                                    <div><%= task.taskName %></div>
                                                    <div class="text-xs mt-1 opacity-75">
                                                        <%= task.assignedUsername %>
                                                    </div>
                                                    <div class="text-xs mt-1 opacity-75">
                                                        <%= __("STATUS_TITLE") %>: <%= getStatusLabel(task.taskStatus) %>
                                                    </div>
                                                </div>
                                                <div class="flex-shrink-0 mt-0.5"><%- priorityIcon %></div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <!-- Empty State (clickable mobile) -->
                                <div class="text-center py-4 text-gray-400 text-xs pointer-events-none">
                                    <i class="fas fa-plus-circle text-lg mb-1"></i>
                                    <div><%= __("CLICK_TO_ADD_TASK") || 'Click to add task' %></div>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
            <p class="text-gray-500 italic"><%= __("NO_DATA_FOUND") %></p>
        </div>
    <% } %>
</div>
