
<% 
const getPriorityIcon = (priority) => {
    switch (priority) {
      case "high": return '<img class="w-4 h-4" src="/img/priority/high.png" alt="High Priority" />';
      case "medium": return '<img class="w-4 h-4" src="/img/priority/medium.png" alt="Medium Priority"/>';
      case "low": return '<img class="w-4 h-4" src="/img/priority/low.png" alt="Low Priority"/>';
    }
};

// Helper for user icon (profile picture or initials)
const getUserIcon = (task) => {
    if (task.userId && profileMap && profileMap[task.userId] && profileMap[task.userId].profilePictureBase64) {
        return `<img src="${profileMap[task.userId].profilePictureBase64}" alt="Avatar" class="w-7 h-7 rounded-full object-cover" />`;
    } else if (task.assignedUsername) {
        const initials = task.assignedUsername.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
        return `<div class=\"w-7 h-7 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold text-xs shadow-sm overflow-hidden flex-shrink-0\">${initials}</div>`;
    } else {
        return '';
    }
};
%>

<div class="bg-white p-4 sm:p-6 rounded-xl shadow-2xl">
    <ul class="divide-y divide-gray-100">
        <% if (allTasks.length > 0) { %>
            <% allTasks.forEach(function(task) { %>

                <li class="p-3 sm:p-4 border-b border-gray-200 hover:bg-gray-50 cursor-pointer task-item"
                    data-task-id="<%= task._id %>"
                    data-task-name="<%= task.taskName %>"
                    data-task-status="<%= task.taskStatus %>"
                    data-task-priority="<%= task.taskPriority %>"
                    data-user-id="<%= task.userId || '' %>"
                    data-task-desc="<%= task.taskDescription || '' %>"
                    data-start-date="<%= task.startDate.toISOString().split('T')[0] %>"
                    data-end-date="<%= task.endDate ? task.endDate.toISOString().split('T')[0] : '' %>">
                    
                    <!-- Mobile & Desktop Layout -->
                    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3">
                        
                        <!-- Task Content -->
                        <div class="flex-grow min-w-0">
                            <!-- Task Name with Priority -->
                            <div class="flex items-center gap-2 mb-2">
                                <span class="flex-shrink-0">
                                    <%- getPriorityIcon(task.taskPriority) %>
                                </span>
                                <p class="text-base sm:text-lg font-semibold text-gray-800 truncate"><%= task.taskName %></p>
                            </div>
                            
                            <!-- Description -->
                            <div class="mb-2">
                                <p class="text-xs sm:text-sm text-gray-600 italic line-clamp-2"><%= task.taskDescription || __("NO_DESCRIPTION") %></p>
                            </div>
                            
                            <!-- Creator Info with User Icon -->
                            <div class="flex items-center gap-2 text-xs sm:text-sm text-gray-700">
                                <% if (task.userId && task.assignedUsername) { %>
                                    <span class="flex-shrink-0"><%- getUserIcon(task) %></span>
                                <% } else { %>
                                    <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                    </svg>
                                <% } %>
                                <span class="font-medium"><%= task.assignedUsername %></span>
                            </div>
                        </div>
                        
                        <!-- Date & Action Icon -->
                        <div class="flex items-center justify-between sm:flex-col sm:items-end gap-2 sm:gap-3 flex-shrink-0">
                            <span class="text-xs sm:text-sm text-gray-500 font-medium"><%= task.dateStr %></span>
                            <svg class="w-5 h-5 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        </div>
                    </div>
                </li>
            <% }); %>
        <% } else { %>
            <li class="p-4 text-center text-gray-500"><%= __("ALL_TASKS_ASSIGNED") %></li>
        <% } %>
    </ul>
</div>
