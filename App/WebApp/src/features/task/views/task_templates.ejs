<div class="flex flex-col min-h-screen bg-gray-50">
    <main class="flex-1 p-2 sm:p-4 lg:p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Section -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-3 sm:p-6 mb-4 sm:mb-6">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4">
                    <div class="flex-1 min-w-0">
                        <h1 class="text-xl sm:text-2xl font-bold text-gray-900 break-words"><%= __("TASK_TEMPLATES_PAGE_TITLE") %></h1>
                        <p class="mt-1 text-xs sm:text-sm text-gray-600 break-words"><%= __("TASK_TEMPLATES_DESCRIPTION") %></p>
                    </div>
                    <button id="btn-create-template" class="inline-flex items-center justify-center gap-2 rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full sm:w-auto">
                        <i class="fas fa-plus"></i>
                        <span><%= __("CREATE_TEMPLATE_BUTTON") %></span>
                    </button>
                </div>
            </div>

            <!-- Templates Table -->
            <div class="shadow overflow-hidden border-b border-gray-200 rounded-lg relative max-h-96 overflow-y-auto overflow-x-auto">
                <table id="entityTable" class="min-w-full divide-y divide-gray-200 responsive-table actions-last">
                    <thead class="bg-gray-50 sticky top-0 z-10">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <%= __("TEMPLATE_NAME_LABEL") %>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <%= __("TASK_NAME_LABEL") %>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <%= __("PRIORITY") %>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <%= __("DEFAULT_DURATION_LABEL") %>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <%= __("DESCRIPTION_LABEL") %>
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                        </tr>
                    </thead>
                    <tbody id="entityTableBody" class="bg-white divide-y divide-gray-200">
                        <% if (templates && templates.length > 0) { %>
                            <% templates.forEach(template => { %>
                                <tr data-template-id="<%= template._id %>">
                                    <td class="px-3 sm:px-6 py-3 text-left text-sm font-medium text-gray-900" data-label="<%= __('TEMPLATE_NAME_LABEL') %>">
                                        <%= template.templateName %>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 text-left text-sm text-gray-700" data-label="<%= __('TASK_NAME_LABEL') %>">
                                        <%= template.taskName %>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 text-left text-sm" data-label="<%= __('PRIORITY') %>">
                                        <% 
                                        const priorityColor = template.taskPriority === 'high' ? 'bg-red-100 text-red-800' : 
                                                              template.taskPriority === 'medium' ? 'bg-yellow-100 text-yellow-800' : 
                                                              'bg-green-100 text-green-800';
                                        %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= priorityColor %>">
                                            <%= __("PRIORITY_" + template.taskPriority.toUpperCase()) || template.taskPriority %>
                                        </span>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 text-left text-sm text-gray-700" data-label="<%= __('DEFAULT_DURATION_LABEL') %>">
                                        <% if (template.defaultDuration) { %>
                                            <%= template.defaultDuration %> <%= __("DAYS") || "days" %>
                                        <% } else { %>
                                            <span class="text-gray-400">‚Äî</span>
                                        <% } %>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 text-left text-sm text-gray-700 truncate" data-label="<%= __('DESCRIPTION_LABEL') %>">
                                        <span class="break-words"><%= template.taskDescription || '‚Äî' %></span>
                                    </td>
                                    <td class="px-3 sm:px-6 py-3 text-right">
                                        <div class="flex justify-end gap-2">
                                            <button class="btn-edit-template inline-flex items-center px-3 py-2 text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors whitespace-nowrap" data-template-id="<%= template._id %>">
                                                <span>‚úèÔ∏è</span>
                                                <span class="ml-1"><%= __('EDIT_BUTTON') || 'Edit' %></span>
                                            </button>
                                            <button class="btn-delete-template inline-flex items-center px-3 py-2 text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors whitespace-nowrap" data-template-id="<%= template._id %>">
                                                <span>üóëÔ∏è</span>
                                                <span class="ml-1"><%= __('DELETE_BUTTON') || 'Delete' %></span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="px-6 py-12 text-center text-sm text-gray-500">
                                    <i class="fas fa-inbox text-4xl text-gray-300 mb-3"></i>
                                    <p><%= __("NO_TEMPLATES_FOUND") || "No templates found. Create your first template!" %></p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

<!-- Hidden templates for modal content (modal injected via initModal JS) -->
<template id="tpl-create-template-modal">
    <%- include('task_template_create_modal') %>
</template>

<template id="tpl-edit-template-modal">
    <%- include('task_template_edit_modal') %>
</template>

<script src="/js/task/task-template-script.js"></script>
