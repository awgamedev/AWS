<div class="flex flex-col min-h-screen bg-gray-50">
    <main class="flex-1 p-4 sm:p-6 lg:p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Section -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900"><%= __("TASK_TEMPLATES_PAGE_TITLE") %></h1>
                        <p class="mt-1 text-sm text-gray-600"><%= __("TASK_TEMPLATES_DESCRIPTION") %></p>
                    </div>
                    <button id="btn-create-template" class="inline-flex items-center gap-2 rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <i class="fas fa-plus"></i>
                        <span><%= __("CREATE_TEMPLATE_BUTTON") %></span>
                    </button>
                </div>
            </div>

            <!-- Templates Table -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <%= __("TEMPLATE_NAME_LABEL") %>
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <%= __("TASK_NAME_LABEL") %>
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <%= __("PRIORITY") %>
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <%= __("DEFAULT_DURATION_LABEL") %>
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <%= __("DESCRIPTION_LABEL") %>
                                </th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <%= __("ACTIONS") %>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="templates-tbody">
                            <% if (templates && templates.length > 0) { %>
                                <% templates.forEach(template => { %>
                                    <tr data-template-id="<%= template._id %>">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            <%= template.templateName %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            <%= template.taskName %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <% 
                                            const priorityColor = template.taskPriority === 'high' ? 'bg-red-100 text-red-800' : 
                                                                  template.taskPriority === 'medium' ? 'bg-yellow-100 text-yellow-800' : 
                                                                  'bg-green-100 text-green-800';
                                            %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= priorityColor %>">
                                                <%= __("PRIORITY_" + template.taskPriority.toUpperCase()) || template.taskPriority %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            <% if (template.defaultDuration) { %>
                                                <%= template.defaultDuration %> <%= __("DAYS") %>
                                            <% } else { %>
                                                <span class="text-gray-400">—</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-700 max-w-xs truncate">
                                            <%= template.taskDescription || '—' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <button class="btn-edit-template text-indigo-600 hover:text-indigo-900 mr-3" data-template-id="<%= template._id %>">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-delete-template text-red-600 hover:text-red-900" data-template-id="<%= template._id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-12 text-center text-sm text-gray-500">
                                        <i class="fas fa-inbox text-4xl text-gray-300 mb-3"></i>
                                        <p><%= __("NO_TEMPLATES_FOUND") %></p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Hidden templates for modal content (modal injected via initModal JS) -->
<template id="tpl-create-template-modal">
    <%- include('task_template_create_modal') %>
</template>

<template id="tpl-edit-template-modal">
    <%- include('task_template_edit_modal') %>
</template>

<script src="/js/task/task-template-script.js"></script>
