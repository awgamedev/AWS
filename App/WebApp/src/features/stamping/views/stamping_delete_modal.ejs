<div class="text-center">
    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
        <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
    </div>
    
    <h3 class="text-lg font-medium text-gray-900 mb-2"><%= __("DELETE_STAMPING_TITLE") %></h3>
    
    <p class="text-sm text-gray-500 mb-4">
        <%= __("CONFIRM_DELETE_STAMPING") %>
    </p>
    
    <div class="bg-gray-100 rounded-md p-3 mb-4">
        <p class="text-sm font-medium text-gray-700"><%= pairDisplay %></p>
    </div>
    
    <input type="hidden" id="delete-inId" value="<%= inId %>">
    <input type="hidden" id="delete-outId" value="<%= outId %>">
    
    <div id="delete-stamping-message" class="mb-4 text-sm font-medium text-center hidden"></div>
    
    <div class="flex justify-center space-x-4">
        <button 
            type="button" 
            id="cancel-delete-btn"
            class="px-4 py-2 bg-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-400 transition duration-150"
            onclick="closeModal()"
        >
            <%= __("CANCEL_BUTTON") %>
        </button>
        <button 
            type="button" 
            id="confirm-delete-stamping-btn"
            class="px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition duration-150"
        >
            <%= __("DELETE_STAMPING_BUTTON") %>
        </button>
    </div>
</div>
