<div class="bg-white p-4 rounded-xl shadow-lg mb-4">
    <div class="text-sm sm:text-base font-semibold text-gray-700 mb-3">Zeitraum w채hlen:</div>
    <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
        <select id="month-select" class="flex-1 p-3 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <% monthOptions.forEach(option => { %>
                <option value="<%= option.value %>" <%= option.isSelected ? 'selected' : '' %>>
                    <%= option.name %>
                </option>
            <% }); %>
        </select>
        <select id="year-select" class="flex-1 sm:flex-none sm:w-32 p-3 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <% yearOptions.forEach(option => { %>
                <option value="<%= option.value %>" <%= option.isSelected ? 'selected' : '' %>>
                    <%= option.value %>
                </option>
            <% }); %>
        </select>
    </div>
</div>

<div class="bg-blue-600 p-4 sm:p-5 rounded-xl shadow-2xl mb-4 text-white">
    <h2 class="text-sm sm:text-base font-medium mb-2 sm:mb-3">Gesamte Arbeitsstunden aller Mitarbeiter im <%= monthName %></h2>
    <p class="text-2xl sm:text-3xl font-extrabold"><%= totalMonthlyHours %> Stunden</p>
</div>

<div id="employee-overview" class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-x-4">
    <% if (overviewData.length === 0) { %>
        <div class="bg-white p-2 rounded-xl shadow-lg text-gray-500 col-span-full">Keine Mitarbeiter oder Stempeldaten f체r diesen Monat gefunden.</div>
    <% } else { %>
        <% overviewData.forEach(userData => { %>
            <div class="bg-white p-3 sm:p-4 rounded-xl shadow-lg mb-4 border-t-4 border-blue-500">
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-3 pb-3 border-b gap-2">
                    <h3 class="text-xl sm:text-2xl font-bold text-gray-800"><%= userData.username %></h3>
                    <div class="flex items-center justify-between sm:justify-end space-x-3">
                        <span class="text-2xl sm:text-3xl font-extrabold text-blue-600"><%= userData.totalHours %> h</span>
                        <button 
                            class="add-stamping-btn px-4 py-3 sm:px-3 sm:py-2 bg-indigo-600 text-white font-medium rounded-lg shadow-md hover:bg-indigo-700 active:bg-indigo-800 transition duration-150 flex items-center min-h-[44px] min-w-[44px] justify-center"
                            data-user-id="<%= userData.userId %>"
                            data-username="<%= userData.username %>"
                            title="<%= __('ADD_STAMPING_BUTTON') %>"
                        >
                            <i class="fas fa-plus text-lg sm:text-base"></i>
                        </button>
                    </div>
                </div>

                <h4 class="text-xs sm:text-sm font-semibold text-gray-700 mb-2">T채gliche Aufzeichnungen im <%= monthName %></h4>
                
                <div class="max-h-64 sm:max-h-40 overflow-y-auto border border-gray-200 rounded-lg bg-gray-50 -webkit-overflow-scrolling-touch">
                    <%
                        const sortedDays = Object.keys(userData.dailyWork).sort();
                        if (sortedDays.length === 0) {
                    %>
                        <div class="p-4 text-gray-500 text-center">Keine Stempelungen im gew채hlten Monat gefunden.</div>
                    <% } else { %>
                        <% sortedDays.forEach(day => { %>
                            <% const dayData = userData.dailyWork[day]; %>
                            <div class="p-3 sm:p-2 border-b border-gray-100 hover:bg-gray-50 transition duration-100">
                                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-2">
                                    <span class="text-sm font-medium text-gray-900 whitespace-nowrap"><%= formatDate(new Date(day)) %></span>
                                    <div class="text-left space-y-2 flex-1">
                                        <% dayData.pairs.forEach(pair => { %>
                                            <%
                                                const durationDisplay = pair.unclosed ? "" : ` (${pair.duration}h)`;
                                                const timeClass = pair.unclosed ? "text-red-500 font-bold" : "text-gray-700";
                                            %>
                                            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2 sm:gap-0 group">
                                                <div class="flex-1">
                                                    <p class="text-sm break-words">
                                                        <%= pair.in %> - <%= pair.out %> <%= pair.stampingReason || '' %> 
                                                        <span class="text-xs text-gray-500 font-medium"><%= durationDisplay %></span>
                                                    </p>
                                                </div>
                                                <% if (pair.inId || pair.outId) { %>
                                                    <div class="flex space-x-2 opacity-100 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity">
                                                        <button 
                                                            class="edit-stamping-pair-btn px-3 py-2 bg-blue-500 text-white text-xs rounded hover:bg-blue-600 active:bg-blue-700 transition duration-150 min-h-[36px] min-w-[36px] flex items-center justify-center"
                                                            data-in-id="<%= pair.inId || '' %>"
                                                            data-out-id="<%= pair.outId || '' %>"
                                                            data-date="<%= day %>"
                                                            data-in-time="<%= pair.in %>"
                                                            data-out-time="<%= pair.out %>"
                                                            data-reason="<%= pair.stampingReason || '' %>"
                                                            data-unclosed="<%= pair.unclosed || false %>"
                                                            title="<%= __('EDIT_BUTTON') %>"
                                                        >
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button 
                                                            class="delete-stamping-pair-btn px-3 py-2 bg-red-500 text-white text-xs rounded hover:bg-red-600 active:bg-red-700 transition duration-150 min-h-[36px] min-w-[36px] flex items-center justify-center"
                                                            data-in-id="<%= pair.inId || '' %>"
                                                            data-out-id="<%= pair.outId || '' %>"
                                                            data-pair-display="<%= pair.in %> - <%= pair.out %>"
                                                            title="<%= __('DELETE_BUTTON') %>"
                                                        >
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                <% } %>
                                            </div>
                                        <% }); %>
                                        <p class="text-xs sm:text-xs font-medium <%= dayData.totalTimeHours > 0 ? 'text-blue-600' : 'text-gray-400' %> mt-1 pt-1 border-t border-gray-200">
                                            Gesamt: <%= dayData.totalTimeHours %> h
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            <% }); %>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const monthSelect = document.getElementById('month-select');
        const yearSelect = document.getElementById('year-select');
        
        const navigateToSelectedMonth = () => {
            const selectedMonth = monthSelect.value;
            const selectedYear = yearSelect.value;
            // Seite mit den neuen Query-Parametern neu laden
            window.location.href = `/time-tracking/stamping-overview?month=${selectedMonth}&year=${selectedYear}`;
        };

        monthSelect.addEventListener('change', navigateToSelectedMonth);
        yearSelect.addEventListener('change', navigateToSelectedMonth);
    });
</script>

<script src="/js/stamping/stamping-admin-script.js"></script>