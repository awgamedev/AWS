<div class="bg-white p-3 rounded-xl shadow-lg mb-4 items-center">
    <div class="text-sm font-semibold text-gray-700 mb-2">Zeitraum w채hlen:</div>
    <select id="month-select" class="p-2 border border-gray-300 rounded-lg">
        <% monthOptions.forEach(option => { %>
            <option value="<%= option.value %>" <%= option.isSelected ? 'selected' : '' %>>
                <%= option.name %>
            </option>
        <% }); %>
    </select>
    <select id="year-select" class="p-2 border border-gray-300 rounded-lg">
        <% yearOptions.forEach(option => { %>
            <option value="<%= option.value %>" <%= option.isSelected ? 'selected' : '' %>>
                <%= option.value %>
            </option>
        <% }); %>
    </select>
</div>

<div class="bg-blue-600 p-3 rounded-xl shadow-2xl mb-4 text-white">
    <h2 class="text-base font-medium mb-2">Gesamte Arbeitsstunden aller Mitarbeiter im <%= monthName %></h2>
    <p class="text-3xl font-extrabold"><%= totalMonthlyHours %> Stunden</p>
</div>

<div id="employee-overview" class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-x-4">
    <% if (overviewData.length === 0) { %>
        <div class="bg-white p-2 rounded-xl shadow-lg text-gray-500 col-span-full">Keine Mitarbeiter oder Stempeldaten f체r diesen Monat gefunden.</div>
    <% } else { %>
        <% overviewData.forEach(userData => { %>
            <div class="bg-white p-2 rounded-xl shadow-lg mb-4 border-t-4 border-blue-500">
                <div class="flex justify-between items-center mb-2 border-b pb-2">
                    <h3 class="text-2xl font-bold text-gray-800"><%= userData.username %></h3>
                    <div class="flex items-center space-x-2">
                        <span class="text-3xl font-extrabold text-blue-600"><%= userData.totalHours %> h</span>
                        <button 
                            class="add-stamping-btn px-3 py-2 bg-indigo-600 text-white font-medium rounded-lg shadow-md hover:bg-indigo-700 transition duration-150 flex items-center"
                            data-user-id="<%= userData.userId %>"
                            data-username="<%= userData.username %>"
                            title="<%= __('ADD_STAMPING_BUTTON') %>"
                        >
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>

                <h4 class="text-sm font-semibold text-gray-700 mb-2">T채gliche Aufzeichnungen im <%= monthName %></h4>
                
                <div class="max-h-40 overflow-y-auto border border-gray-200 rounded-lg bg-gray-50">
                    <%
                        const sortedDays = Object.keys(userData.dailyWork).sort();
                        if (sortedDays.length === 0) {
                    %>
                        <div class="p-4 text-gray-500 text-center">Keine Stempelungen im gew채hlten Monat gefunden.</div>
                    <% } else { %>
                        <% sortedDays.forEach(day => { %>
                            <% const dayData = userData.dailyWork[day]; %>
                            <div class="p-2 border-b border-gray-100 flex justify-between items-start hover:bg-gray-50 transition duration-100">
                                <span class="text-sm text-gray-900"><%= formatDate(new Date(day)) %></span>
                                <div class="text-left space-y-1 flex-1 mx-2">
                                    <% dayData.pairs.forEach(pair => { %>
                                        <%
                                            const durationDisplay = pair.unclosed ? "" : ` (${pair.duration}h)`;
                                            const timeClass = pair.unclosed ? "text-red-500 font-bold" : "text-gray-700";
                                        %>
                                        <div class="flex justify-between items-center group">
                                            <p class="text-sm">
                                                <%= pair.in %> - <%= pair.out %> <%= pair.stampingReason || '' %> 
                                                <span class="text-xs text-gray-500"><%= durationDisplay %></span>
                                            </p>
                                            <% if (pair.inId || pair.outId) { %>
                                                <div class="flex space-x-1 opacity-0 group-hover:opacity-100">
                                                    <button 
                                                        class="edit-stamping-pair-btn px-2 py-1 bg-blue-500 text-white text-xs rounded hover:bg-blue-600 transition duration-150"
                                                        data-in-id="<%= pair.inId || '' %>"
                                                        data-out-id="<%= pair.outId || '' %>"
                                                        data-date="<%= day %>"
                                                        data-in-time="<%= pair.in %>"
                                                        data-out-time="<%= pair.out %>"
                                                        data-reason="<%= pair.stampingReason || '' %>"
                                                        data-unclosed="<%= pair.unclosed || false %>"
                                                        title="<%= __('EDIT_BUTTON') %>"
                                                    >
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button 
                                                        class="delete-stamping-pair-btn px-2 py-1 bg-red-500 text-white text-xs rounded hover:bg-red-600 transition duration-150"
                                                        data-in-id="<%= pair.inId || '' %>"
                                                        data-out-id="<%= pair.outId || '' %>"
                                                        data-pair-display="<%= pair.in %> - <%= pair.out %>"
                                                        title="<%= __('DELETE_BUTTON') %>"
                                                    >
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% }); %>
                                    <p class="text-xs font-medium <%= dayData.totalTimeHours > 0 ? 'text-blue-600' : 'text-gray-400' %> mt-1">
                                        Gesamt: <%= dayData.totalTimeHours %> h
                                    </p>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            <% }); %>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const monthSelect = document.getElementById('month-select');
        const yearSelect = document.getElementById('year-select');
        
        const navigateToSelectedMonth = () => {
            const selectedMonth = monthSelect.value;
            const selectedYear = yearSelect.value;
            // Seite mit den neuen Query-Parametern neu laden
            window.location.href = `/time-tracking/stamping-overview?month=${selectedMonth}&year=${selectedYear}`;
        };

        monthSelect.addEventListener('change', navigateToSelectedMonth);
        yearSelect.addEventListener('change', navigateToSelectedMonth);
    });
</script>

<script src="/js/stamping/stamping-admin-script.js"></script>