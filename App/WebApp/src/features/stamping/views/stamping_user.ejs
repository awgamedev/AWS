<div class="bg-white p-3 rounded-lg shadow-sm mb-3">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-3">
        <div class="flex items-center p-2 rounded-lg border-l-4 <%= currentStatus === "in" ? "border-green-500 bg-green-50" : "border-red-500 bg-red-50" %>">
            <div class="flex-shrink-0 p-2 rounded-lg <%= currentStatus === "in" ? "bg-green-100" : "bg-red-100" %>">
                <% if (currentStatus === "in") { %>
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <% } else { %>
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <% } %>
            </div>
            <div class="ml-3">
                <p class="text-xs font-medium text-gray-600"><%= __("CURRENT_STATUS") %></p>
                <p class="text-lg font-bold <%= currentStatus === "in" ? "text-green-700" : "text-red-700" %>">
                    <%= currentStatus === "in" ? (__("STATUS_IN")) : (__("STATUS_OUT")) %>
                </p>
            </div>
        </div>

        <div class="flex items-center p-2 rounded-lg border-l-4 border-gray-300 bg-gray-50">
            <div class="flex-shrink-0 bg-gray-100 p-2 rounded-lg">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <div class="ml-3">
                <p class="text-xs font-medium text-gray-600"><%= __("LAST_STAMPING") %></p>
                <p class="text-lg font-bold text-gray-900"><%= lastStampingTime %></p>
            </div>
        </div>
    </div>

    <p id="stamping-message" class="mb-3 text-sm text-gray-600 hidden"></p>
    
    <div id="reason-selection" class="mb-3 <%= currentStatus === "in" ? "hidden" : "" %>">
        <label for="stamping-reason" class="block text-xs font-medium text-gray-700 mb-1">
            <%= __("REASON_SELECT") %>
        </label>
        <select id="stamping-reason" name="stamping-reason"
            class="block w-full pl-3 pr-10 py-1.5 text-sm border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 rounded-md shadow-sm">
            <% allowedReasons.forEach(function(reason) { %>
                <option value="<%= reason %>"><%= reason %></option>
            <% }); %>
        </select>
        <p id="reason-error" class="text-xs text-red-500 mt-1 hidden"><%= __("REASON_REQUIRED") %></p>
    </div>
    
    <div class="flex gap-2">
        <button 
            id="stamp-in-btn"
            data-type="in"
            class="flex-1 py-2 px-4 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition duration-150 shadow-sm <%= currentStatus === "in" ? "opacity-50 cursor-not-allowed" : "" %>"
            <%= currentStatus === "in" ? "disabled" : "" %>
        >
            <%= __("STAMP_IN_BUTTON") %>
        </button>
        
        <button 
            id="stamp-out-btn"
            data-type="out"
            class="flex-1 py-2 px-4 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition duration-150 shadow-sm <%= currentStatus === "out" ? "opacity-50 cursor-not-allowed" : "" %>"
            <%= currentStatus === "out" ? "disabled" : "" %>
        >
            <%= __("STAMP_OUT_BUTTON") %>
        </button>
    </div>
</div>

<div class="bg-white p-3 rounded-lg shadow-sm">
    <h2 class="text-base font-semibold text-gray-800 mb-2"><%= __("YOUR_SHIFTS") %></h2>
    <div class="overflow-y-auto" style="max-height: 35vh;">
        <ul class="space-y-1">
            <% if (stampingPairs && stampingPairs.length > 0) { %>
                <% stampingPairs.forEach(function(dayData) { %>
                    <li class="p-2 rounded-md border <%= dayData.isToday ? 'border-blue-400 bg-blue-50' : (dayData.isWeekend ? 'border-gray-200 bg-gray-50' : 'border-gray-100') %>">
                        <div class="flex items-center gap-2 mb-1">
                            <span class="text-xs font-medium <%= dayData.isWeekend ? 'text-gray-500' : 'text-gray-600' %>"><%= dayData.dayName %></span>
                            <span class="text-xs font-semibold <%= dayData.isToday ? 'text-blue-700' : 'text-gray-700' %>"><%= dayData.dateStr %></span>
                            <% if (dayData.isToday) { %>
                                <span class="text-xs font-medium text-blue-600">‚óè <%= __('TODAY') || 'Heute' %></span>
                            <% } %>
                        </div>
                        <% if (dayData.pairs.length > 0) { %>
                            <% dayData.pairs.forEach(function(pair, index) { 
                                const comeTime = formatTime(pair.come.date);
                                const goTime = pair.go ? formatTime(pair.go.date) : ""; 
                                const reason = pair.come.stampingReason || (__("NA_SHORT") || "N/A");
                                const timeDisplay = pair.go ? `${comeTime} - ${goTime}` : `${comeTime} - <strong>${__("OPEN_SHIFT")}</strong>`;
                                const statusText = pair.go ? (__("STATUS_CLOSED")) : (__("STATUS_ACTIVE"));
                                const statusColor = pair.go ? "text-gray-600 bg-gray-100" : "text-white bg-blue-600";
                            %>
                            <div class="<%= index > 0 ? 'mt-2 pt-2 border-t border-gray-200' : '' %> hover:bg-gray-50 transition duration-100 rounded">
                                <div class="flex justify-between items-center mb-1">
                                    <div class="text-sm text-gray-900"><%- timeDisplay %></div>
                                    <span class="inline-flex items-center rounded-full <%= statusColor %> px-2 py-0.5 text-xs font-medium">
                                        <%= statusText %>
                                    </span>
                                </div>
                                <div class="text-xs text-gray-500"><%= reason %></div>
                            </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-xs text-gray-400 italic"><%= __("NO_STAMPINGS") %></div>
                        <% } %>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="py-4 text-center text-sm text-gray-500"><%= __("NO_STAMPINGS") %></li>
            <% } %>
        </ul>
    </div>
</div>

<script src="/js/stamping/stamping-script.js"></script>