<form id="edit-stamping-form">
    <input type="hidden" id="edit-stampingId" name="stampingId">
    <input type="hidden" id="edit-stampingType" name="stampingType">
    
    <div class="max-h-96 overflow-y-auto mb-2">
        <div class="mb-4">
            <label for="edit-reason" class="block text-sm font-medium text-gray-700"><%= __("REASON") %></label>
            <select id="edit-reason" name="stampingReason" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white">
                <% ALLOWED_REASONS.forEach(function(reason) { %>
                    <option value="<%= reason %>"><%= reason %></option>
                <% }); %>
            </select>
        </div>

        <div class="mb-4">
            <label for="edit-arriveDate" class="block text-sm font-medium text-gray-700"><%= __("ARRIVE_DATE") %> *</label>
            <input type="datetime-local" id="edit-arriveDate" name="arriveDate" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <div class="mb-4">
            <label for="edit-leaveDate" class="block text-sm font-medium text-gray-700"><%= __("LEAVE_DATE") %></label>
            <input type="datetime-local" id="edit-leaveDate" name="leaveDate" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        
        <div id="edit-stamping-form-message" class="mb-4 text-sm font-medium text-center hidden"></div>
    </div>

    <div class="flex justify-between">
        <button type="button" id="delete-stamping-btn" class="px-6 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition duration-150 shadow-md">
            <%= __("DELETE_BUTTON") %>
        </button>
        <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition duration-150 shadow-md">
            <%= __("SAVE_CHANGES_BUTTON") %>
        </button>
    </div>
</form>
