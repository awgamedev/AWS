<div class="relative flex mb-4">
    <input type="text" id="entitySearch" placeholder="<%= __('SEARCH_PLACEHOLDER') %>" class="w-full px-4 py-2 border border-gray-300 shadow-sm rounded-l-md focus:ring-indigo-500 focus:border-indigo-500 z-10">
    
    <a href="/user/create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 rounded-r-md -ml-px z-20">
        <span class="fas fa-plus"></span>
    </a>
</div>

<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg relative max-h-96 overflow-y-auto">
    <table id="entityTable" class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 sticky top-0 z-10">
            <tr>
                <th data-column="username" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"><%= __('USERNAME_LABEL') %></th>
                <th data-column="email" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"><%= __('EMAIL_LABEL') %></th>
                <th data-column="role" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"><%= __('ROLE_LABEL') %></th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
            </tr>
        </thead>
        <tbody id="entityTableBody" class="bg-white divide-y divide-gray-200">
            <% items.forEach(item => { %>
                <tr data-id="<%= item._id %>" data-username="<%= item.username %>" data-email="<%= item.email %>" data-role="<%= item.role %>">
                    <td class="px-6 py-3 text-left text-sm font-medium text-gray-900"><%= item.username %></td>
                    <td class="px-6 py-3 text-left text-sm font-medium text-gray-900"><%= item.email %></td>
                    <td class="px-6 py-3 text-left text-sm font-medium text-gray-900"><%= item.role %></td>
                    <td class="px-6 py-3 text-right">
                        <div class="flex justify-end gap-2">
                            <a href="/modify-user/<%= item._id %>" 
                                class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors">
                                <span>âœï¸</span>
                                <span class="ml-1"><%= __('EDIT_BUTTON') %></span>
                            </a>
                            <a href="/user/list/confirm-delete/<%= item._id %>"
                                class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors">
                                <span>ğŸ—‘ï¸</span>
                                <span class="ml-1"><%= __('DELETE_BUTTON') %></span>
                            </a>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('_modal') %> 

<script src="/js/user/user-script.js"></script>

