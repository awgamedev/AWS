<table class="min-w-full text-sm">
  <thead>
    <tr class="bg-gray-50 text-gray-600 uppercase text-xs tracking-wide">
      <th class="px-4 py-3 text-left font-semibold"><%= __('TASK_NAME') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('STATUS') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('PRIORITY') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('START_DATE') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('USER') %></th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-100">
    <% if(recentTasks.length === 0){ %>
      <tr>
        <td colspan="5" class="px-4 py-6 text-center text-gray-400"> <%= __('NO_TASKS_YET') %></td>
      </tr>
    <% } %>
    <% recentTasks.forEach(function(t){ %>
      <tr class="hover:bg-gray-50 transition">
        <td class="px-4 py-2 font-medium text-gray-700"><%= t.taskName %></td>
        <td class="px-4 py-2">
          <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-semibold
            <%= t.taskStatus === 'completed' ? 'bg-emerald-100 text-emerald-700' : (t.taskStatus === 'in-progress' ? 'bg-indigo-100 text-indigo-700' : 'bg-rose-100 text-rose-700') %>">
            <%= t.taskStatus %>
          </span>
        </td>
        <td class="px-4 py-2 text-gray-600"><%= t.taskPriority %></td>
        <td class="px-4 py-2 text-gray-500">
          <%= new Date(t.startDate).toLocaleString('de-DE', { hour12: false }) %>
        </td>
        <td class="px-4 py-2 text-gray-700"><%= t.user %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
