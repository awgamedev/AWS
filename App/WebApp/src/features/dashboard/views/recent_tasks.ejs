<table class="min-w-full text-sm">
  <thead>
    <tr class="bg-gray-50 text-gray-600 uppercase text-xs tracking-wide">
      <th class="px-4 py-3 text-left font-semibold"><%= __('TASK_NAME') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('STATUS') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('PRIORITY') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('START_DATE') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('END_DATE') %></th>
      <th class="px-4 py-3 text-left font-semibold"><%= __('USER') %></th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-100">
    <% if(recentTasks.length === 0){ %>
      <tr>
        <td colspan="5" class="px-4 py-6 text-center text-gray-400"> <%= __('NO_TASKS_YET') %></td>
      </tr>
    <% } %>
    <% recentTasks.forEach(function(t){ %>
      <tr class="hover:bg-gray-50 transition">
        <td class="px-4 py-2 font-medium text-gray-700"><%= t.taskName %></td>
        <td class="px-4 py-2">
          <% if (t.taskStatus === 'pending') { %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-gray-100 text-gray-700 border border-gray-300">
              <i class="fas fa-clock mr-1"></i><%= __('STATUS_PENDING') %>
            </span>
          <% } else if (t.taskStatus === 'in-progress') { %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-blue-100 text-blue-700 border border-blue-300">
              <i class="fas fa-spinner mr-1"></i><%= __('STATUS_IN_PROGRESS') %>
            </span>
          <% } else if (t.taskStatus === 'completed') { %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-green-100 text-green-700 border border-green-300">
              <i class="fas fa-check-circle mr-1"></i><%= __('STATUS_COMPLETED') %>
            </span>
          <% } else { %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-medium bg-gray-100 text-gray-700 border border-gray-300">
              <%= t.taskStatus %>
            </span>
          <% } %>
        </td>
        <td class="px-4 py-2 text-gray-600">
          <% if (t.taskPriority === 'high') { %>
            <%= __('PRIORITY_HIGH') %>
          <% } else if (t.taskPriority === 'medium') { %>
            <%= __('PRIORITY_MEDIUM') %>
          <% } else if (t.taskPriority === 'low') { %>
            <%= __('PRIORITY_LOW') %>
          <% } else { %>
            <%= t.taskPriority %>
          <% } %>
        </td>
        <td class="px-4 py-2 text-gray-500">
          <% const startDateObj = new Date(t.startDate); %>
          <%= (startDateObj.getDate().toString().padStart(2, '0')) + '.' + ((startDateObj.getMonth()+1).toString().padStart(2, '0')) + '.' + startDateObj.getFullYear() %>
        </td>
        <td class="px-4 py-2 text-gray-500">
          <% if (t.endDate) { %>
            <% const endDateObj = new Date(t.endDate); %>
            <%= (endDateObj.getDate().toString().padStart(2, '0')) + '.' + ((endDateObj.getMonth()+1).toString().padStart(2, '0')) + '.' + endDateObj.getFullYear() %>
          <% } else { %>
            &ndash;
          <% } %>
        </td>
        <td class="px-4 py-2 text-gray-700"><%= t.user %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
