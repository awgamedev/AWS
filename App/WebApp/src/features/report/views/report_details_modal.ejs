<div class="p-3 sm:p-4">
  <div class="space-y-2 mb-4 text-sm">
    <p class="break-words"><strong class="inline-block min-w-[80px]"><%= __('USER') %>:</strong> <span id="detail-user"><%= user %></span></p>
    <p class="break-words"><strong class="inline-block min-w-[80px]"><%= __('TYPE') %>:</strong> <span id="detail-type"><%= __('REPORT_TYPE_' + type.toUpperCase()) %></span></p>
    <p class="break-words"><strong class="inline-block min-w-[80px]"><%= __('STATUS') %>:</strong> <span id="detail-status"><%= __('REPORT_STATUS_' + status.toUpperCase()) %></span></p>
    <p class="break-words"><strong class="inline-block min-w-[80px]"><%= __('FROM') %>:</strong> <span id="detail-start"><%= new Date(startDate).toLocaleDateString('de-DE') %></span></p>
    <p class="break-words"><strong class="inline-block min-w-[80px]"><%= __('TO') %>:</strong> <span id="detail-end"><%= new Date(endDate).toLocaleDateString('de-DE') %></span></p>
    <p class="break-words"><strong class="inline-block min-w-[80px] align-top"><%= __('DESCRIPTION') %>:</strong> <span id="detail-description" class="inline-block max-w-full"><%= description || '' %></span></p>
  </div>
  
  <input type="hidden" id="detail-report-id" value="<%= reportId %>">
  
  <div class="flex flex-col sm:flex-row gap-2 justify-end">
    <button id="approve-btn" class="w-full sm:w-auto px-4 py-2.5 sm:py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 touch-manipulation active:bg-green-800">
      <%= __('APPROVE') %>
    </button>
    <button id="reject-btn" class="w-full sm:w-auto px-4 py-2.5 sm:py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700 touch-manipulation active:bg-red-800">
      <%= __('REJECT') %>
    </button>
    <button type="button" onclick="closeModal()" class="w-full sm:w-auto px-4 py-2.5 sm:py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 touch-manipulation active:bg-gray-100">
      <%= __('CLOSE') %>
    </button>
  </div>
  
  <div id="admin-action-msg" class="mt-3 text-sm text-center"></div>
</div>
